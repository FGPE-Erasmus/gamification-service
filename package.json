{
  "name": "fgpe-gamification-service",
  "version": "1.0.0",
  "description": "This is a Gamification Service for educational contexts. It consumes a JSON object adhering to GEdIL schema and uses it to provide the student with a gamified experience leveraging on the activities of the course.",
  "license": "GPL-3.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest-e2e.json",
    "test:graphql": "jest --config ./test/graphql/jest-graphql.json",
    "tools:gen-schema": "ts-node -r tsconfig-paths/register --transpile-only tools/gen-schema.tool"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "@nestjs/bull": "^0.1.2",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.0.0",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.3.2",
    "@nestjs/typeorm": "^7.0.0",
    "@types/bull": "^3.14.2",
    "apollo-server": "^2.16.0",
    "apollo-server-express": "^2.16.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cookie-parser": "^1.4.5",
    "got": "^11.5.2",
    "graphql": "^15.3.0",
    "graphql-query-complexity": "^0.6.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^6.0.12",
    "graphql-type-json": "^0.3.2",
    "helmet": "^3.23.3",
    "mongodb": "^3.5.9",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.0",
    "type-graphql": "^0.17.6",
    "typeorm": "^0.2.25",
    "unzipper": "^0.10.11"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.1",
    "@types/node": "^14.0.14",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.10",
    "@types/unzipper": "^0.10.3",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "easygraphql-tester": "^5.1.6",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.22.0",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.6"
  },
  "resolutions": {
    "**/**/fs-capacitor": "^6.2.0",
    "**/graphql-upload": "^11.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FGPE-Erasmus/gamification-service.git"
  },
  "bugs": {
    "url": "https://github.com/FGPE-Erasmus/gamification-service/issues"
  },
  "homepage": "https://github.com/FGPE-Erasmus/gamification-service#readme"
}
