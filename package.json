{
  "name": "fgpe-gamification-service",
  "version": "1.0.0",
  "description": "This is a Gamification Service for educational contexts. It consumes a JSON object adhering to GEdIL schema and uses it to provide the student with a gamified experience leveraging on the activities of the course.",
  "license": "GPL-3.0",
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start:dev": "NODE_ENV=dev NODE_OPTIONS='--max-old-space-size=4096' nest start --watch",
    "start:debug": "NODE_ENV=dev NODE_OPTIONS='--max-old-space-size=4096' nest start --debug --watch",
    "start:prod": "NODE_ENV=prod NODE_OPTIONS='--max-old-space-size=4096' node dist/src/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=test jest",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./test/e2e/jest-e2e.json --runInBand",
    "test:graphql": "NODE_ENV=test jest --config ./test/graphql/jest-graphql.json --runInBand",
    "tools:gen-schema": "ts-node -r tsconfig-paths/register --transpile-only tools/gen-schema.tool"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "@nestjs/bull": "^0.3.0",
    "@nestjs/common": "^7.5.5",
    "@nestjs/core": "^7.5.5",
    "@nestjs/graphql": "^7.9.0",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mongoose": "^7.1.0",
    "@nestjs/passport": "^7.1.3",
    "@nestjs/platform-express": "^7.5.4",
    "@nestjs/schedule": "^0.4.1",
    "apollo-server": "^2.25.3",
    "apollo-server-express": "^2.19.0",
    "axios": "^0.21.2",
    "bcryptjs": "^2.4.3",
    "bull": "^3.19.0",
    "cache-manager": "^3.4.4",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "form-data": "^3.0.0",
    "graphql": "^15.4.0",
    "graphql-query-complexity": "^0.6.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^6.2.4",
    "graphql-type-json": "^0.3.2",
    "graphql-upload": "^11.0.0",
    "helmet": "^3.23.3",
    "jsonpath-plus": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "keycloak-admin": "^1.14.3",
    "keycloak-connect": "^11.0.3",
    "mongodb": "^3.5.9",
    "mongoose": "^5.10.7",
    "mongoose-autopopulate": "^0.12.2",
    "mongoose-lean-id": "^0.2.0",
    "mongoose-lean-virtuals": "^0.7.4",
    "mongoose-timestamp": "^0.6.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "qs": "^6.9.4",
    "redis": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.0",
    "type-graphql": "^1.1.1",
    "unzipper": "^0.10.11"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bull": "^3.14.2",
    "@types/cron": "^1.7.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.1",
    "@types/mongoose": "^5.7.36",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.0.14",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.10",
    "@types/unzipper": "^0.10.3",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "easygraphql-tester": "^6.0.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.22.0",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.2.11",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^6.2.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FGPE-Erasmus/gamification-service.git"
  },
  "bugs": {
    "url": "https://github.com/FGPE-Erasmus/gamification-service/issues"
  },
  "homepage": "https://github.com/FGPE-Erasmus/gamification-service#readme",
  "config": {
    "mongodbMemoryServer": {
      "version": "4",
      "disablePostinstall": "1"
    }
  }
}
