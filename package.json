{
  "name": "fgpe-gamification-service",
  "version": "1.0.0",
  "description": "FGPE Gamification Service",
  "license": "GPL-3.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start:dev": "ts-node-dev --respawn --transpileOnly ./src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest-e2e.json",
    "test:graphql": "jest --config ./test/graphql/jest-graphql.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^7.3.1",
    "@nestjs/core": "^7.3.1",
    "@nestjs/graphql": "^7.5.1",
    "@nestjs/platform-express": "^7.3.1",
    "@nestjs/platform-fastify": "^7.3.1",
    "@nestjs/typeorm": "^7.1.0",
    "apollo-server-fastify": "^2.15.1",
    "class-validator": "^0.12.2",
    "graphql": "^14.6.0",
    "graphql-tools": "^6.0.12",
    "helmet": "^3.23.3",
    "mongodb": "^3.5.9",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.0",
    "type-graphql": "^0.17.6",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.1",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/testing": "^7.3.1",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "apollo-server-express": "^2.15.1",
    "class-transformer": "^0.2.3",
    "easygraphql-tester": "^5.1.6",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^28.6.1",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.50",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FGPE-Erasmus/gamification-service.git"
  },
  "bugs": {
    "url": "https://github.com/FGPE-Erasmus/gamification-service/issues"
  },
  "homepage": "https://github.com/FGPE-Erasmus/gamification-service#readme"
}
