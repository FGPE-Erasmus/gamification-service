{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../assets",
        "outDir": "dist/assets",
        "watchAssets": true
      }
    ]
  },
  "plugins": [
    {
      "name": "@nestjs/graphql/plugin",
      "options": {
        "typeFileNameSuffix": [".args.ts", ".dto.ts", ".input.ts", ".model.ts"]
      }
    }
  ]
}
